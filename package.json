{
  "name": "elms-backend",
  "version": "1.0.0",
  "description": "Express.js backend for the E-Learning Management System (ELMS) with TypeScript, MySQL, JWT authentication, and Socket.IO",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:auth": "jest tests/controllers/auth.test.ts --detectOpenHandles --forceExit",
    "test:admin": "jest tests/controllers/admin.test.ts --detectOpenHandles --forceExit",
    "test:teacher": "jest tests/controllers/teacher.test.ts --detectOpenHandles --forceExit",
    "test:student": "jest tests/controllers/student.test.ts --detectOpenHandles --forceExit",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaheAlif/full-elms-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaheAlif/full-elms-backend/issues"
  },
  "homepage": "https://github.com/MaheAlif/full-elms-backend#readme",
  "dependencies": {
    "@radix-ui/react-toast": "^1.2.15",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "chromedriver": "^141.0.3",
    "class-variance-authority": "^0.7.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.1",
    "node-fetch": "^3.3.2",
    "selenium-webdriver": "^4.37.0",
    "socket.io": "^4.8.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.6.0",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "jest": "^29.6.1",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2"
  }
}
